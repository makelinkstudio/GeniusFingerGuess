<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lt_shop_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
      <!-- 图片 -->
      <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70">
            <TextView
                    android:id="@+id/tvw_shop_avdId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/ivw_shop_goods"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/jian_left" />
                <ProgressBar 
                    android:id="@+id/pbr_shop_probar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />
                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@color/shopImg_bottom_color">
                    <TextView
                    android:id="@+id/tvw_shop_businName"
                    style="@style/text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ddd"
                    android:textColor="@color/black" />
                      <TextView
                        android:id="@+id/tvw_shop_integral"
                        style="@style/text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/shop_integral" 
                         android:textColor="@color/black" />
                </RelativeLayout>
                
                   
      </RelativeLayout>
    <!-- 文字 内容 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tvw_shop_name"
                    style="@style/text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ddd" 
                    android:textColor="@color/gloden"/>
               <RelativeLayout 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                 <TextView
                        android:id="@+id/tvw_shop_endTime"
                        style="@style/text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/shop_endTime" 
                        android:textColor="@color/black"/>      
                   <TextView 
                       android:id="@+id/tvw_shop_integralLeft"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       style="@style/text_style"
                       android:textColor="@color/shopCollect_leftIntegral_color"/>
                   </RelativeLayout> 
        </LinearLayout>
        <!-- 横线 -->
	 <LinearLayout 
				       android:layout_width="match_parent"
				       android:layout_height="0.5dp"
				       android:layout_weight="0"
				       android:background="@color/tab_border">
				   </LinearLayout>
        <!-- 预约  收藏 -->
         <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                     android:layout_weight="10"
                     android:orientation="horizontal"
                     android:gravity="center">
                       <TextView
                        android:id="@+id/tvw_shop_appoint"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                         android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/shop_appoint"
                        style="@style/text_style"
                        android:textColor="@color/shopApp_color" />
                 <LinearLayout 
				       android:layout_width="0.5dp"
				       android:layout_height="match_parent"
				       android:layout_weight="0"
				       android:background="@color/tab_border">
				   </LinearLayout>
                    <TextView
                        android:id="@+id/tvw_shop_collect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/text_style"
                        android:text="@string/shop_collect"
                        android:textColor="@color/shopCollect_color" />
                </LinearLayout>
</LinearLayout>